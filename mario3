#include <stdio.h>
#include <cs50.h>

void print_spaces(int num);
void print_hashes(int num);

int main(void)
{
    int height;
    do
    {
        height = get_int("Height: ");
    }
    while (height < 0 || height > 8);

    int spaces = height - 1;
    int hashes = 1;

    for (int i = 0; i < height; i++)
    {
        print_spaces(spaces);
        print_hashes(hashes);
        printf("  ");
        print_hashes(hashes);
        spaces--;
        hashes++;
        printf("\n");
    }
}

void print_spaces(int num)
{
    for (int a = 0; a < num; a++)
    {
        printf(" ");
    }
}

void print_hashes(int num)
{
    for (int a = 0; a < num; a++)
    {
        printf("#");
    }
}
