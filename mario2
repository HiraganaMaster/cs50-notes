#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int height;
    do
    {
        height = get_int("Choose height between 1 and 8: ");
    }
    while (height < 1 || height > 8);

    for (int a = 0; a < height; a++)
    {
        for (int spaces = height - a - 1; spaces > 0; spaces--)
        {
            printf(" ");
        }
        for (int hashes = 0 ; hashes < a + 1; hashes++)
        {
            printf("#");
        }

        printf("  ");

        for (int hashes = 0 ; hashes < a + 1; hashes++)
        {
            printf("#");
        }
        printf("\n");
    }
}
